---
interface Props {
  size?: "small" | "medium" | "large";
}

const { size = "medium" } = Astro.props;

const sizes = {
  small: "text-2xl",
  medium: "text-3xl",
  large: "text-4xl",
};
---

<div class="logo" dir="ltr">
  <div class="logo-text">
    <span class="pharma">PHARMA</span>
    <span class="sos">SOS</span>
      </div>
</div>

<style>
  .logo {
    position: relative;
    display: inline-flex;
    align-items: center;
    font-family: 'Montserrat', system-ui, sans-serif;
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
    padding: 0.8rem 1.5rem;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(104, 211, 145, 0.2);
    border: 1px solid rgba(104, 211, 145, 0.1);
    unicode-bidi: isolate;
  }

  .logo-text {
    display: flex;
    align-items: center;
    line-height: 1;
    gap: 0.1em;
    direction: ltr;
  }

  .pharma {
    color: #ffffff;
    font-size: 2.5rem;
    font-weight: 800;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .sos {
    color: #68D391;
    font-size: 2.5rem;
    font-weight: 900;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    text-shadow: 0 0 15px rgba(104, 211, 145, 0.3);
  }

  .plus {
    color: #68D391;
    font-size: 2.5rem;
    font-weight: 900;
    margin-left: 0.2em;
    animation: pulse 2s infinite;
    display: inline-block;
    text-shadow: 0 0 15px rgba(104, 211, 145, 0.3);
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.8;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  .logo:hover {
    box-shadow: 0 4px 20px rgba(104, 211, 145, 0.3);
    transform: translateY(-1px);
    transition: all 0.3s ease;
  }

  .logo:hover .plus {
    animation: pulse 1s infinite;
  }

  @media (max-width: 640px) {
    .logo {
      padding: 0.6rem 1rem;
    }
    
    .pharma, .sos, .plus {
      font-size: 1.8rem;
    }
  }
</style> 