---
import Layout from "@/layouts/Base.astro";
import NotTranslateCaution from "@/components/i18n/NotTranslateCaution.astro";
import PageHeadline from "@/components/PageHeadline.astro";
import { LOCALES } from "@/i18n";

export const prerender = true;

const validLanguages = ['en', 'fr', 'ar'] as const;
type ValidLanguage = typeof validLanguages[number];

export function getStaticPaths() {
  return validLanguages.map(lang => ({
    params: { lang }
  }));
}

const { lang } = Astro.params;
const currentLang = validLanguages.includes(lang as ValidLanguage) ? lang as ValidLanguage : 'fr';

const title = {
  en: "Title in English",
  fr: "Titre en français",
  ar: "العنوان بالعربية"
};

const description = {
  en: "Description in English",
  fr: "Description en français",
  ar: "الوصف بالعربية"
};

const content = {
  en: "Content in English",
  fr: "Contenu en français",
  ar: "المحتوى بالعربية"
};

const translations = {
  title: {
    fr: "Page monolingue",
    en: "Monolingual page",
    ar: "صفحة أحادية اللغة"
  }
} as const;
---

<Layout title={translations.title[currentLang]}>
  <NotTranslateCaution usedLangs={["en", "fr", "ar"]} />
  <div>
    <PageHeadline title={title[currentLang as keyof typeof title]} />
    <p>{description[currentLang as keyof typeof description]}</p>
    <p>{content[currentLang as keyof typeof content]}</p>
  </div>
</Layout>

<style>
  .monolingual-page {
    padding: 2rem;
    text-align: center;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }
</style>