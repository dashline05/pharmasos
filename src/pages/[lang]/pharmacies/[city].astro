---
import Layout from "@/layouts/Base.astro";
import type { Pharmacy } from '@/types/pharmacy';
import pharmacyData from '@/data/pharmacyData.json';

export const prerender = true;

// Helper function to create URL-safe slugs
function createSlug(text: string, lang: string) {
  if (lang === 'ar') {
    // For Arabic, use the English name as the slug
    const englishName = pharmacyData.pharmacies.find(p => p.city.ar === text)?.city.en || text;
    return englishName.toLowerCase().trim().replace(/\s+/g, '-');
  }
  return text.toLowerCase().trim().replace(/\s+/g, '-');
}

// Helper function to find city by slug
function findCityBySlug(slug: string, lang: string) {
  return pharmacyData.pharmacies.find(p => {
    const citySlug = createSlug(p.city[lang], lang);
    return citySlug === slug;
  });
}

export async function getStaticPaths() {
  const paths = [];
  const languages = ['en', 'fr', 'ar'] as const;

  languages.forEach(lang => {
    // Get unique cities for this language
    const cities = [...new Set(pharmacyData.pharmacies.map(p => p.city[lang]))];
    
    cities.forEach(cityName => {
      const slug = createSlug(cityName, lang);
      paths.push({
        params: { lang, city: slug },
        props: { 
          pharmacies: pharmacyData.pharmacies.filter(p => 
            createSlug(p.city[lang], lang) === slug
          ),
          cityName
        }
      });
    });
  });

  return paths;
}

const { lang, city } = Astro.params;
const { pharmacies, cityName } = Astro.props;

const translations = {
  title: {
    fr: `${cityName} - Pharmacies de Garde`,
    en: `${cityName} - On-Duty Pharmacies`,
    ar: `${cityName} - صيدليات الحراسة`
  },
  subtitle: {
    fr: "Trouvez facilement une pharmacie ouverte près de chez vous",
    en: "Easily find an open pharmacy near you",
    ar: "اعثر بسهولة على صيدلية مفتوحة بالقرب منك"
  },
  directions: {
    fr: "Cliquez pour obtenir l'itinéraire sur:",
    en: "Click to get directions on:",
    ar: "انقر للحصول على الاتجاهات على:"
  }
};
---

<Layout title={translations.title[lang]}>
  <div class="pharmacy-page">
    <h1>{translations.title[lang]}</h1>
    <p class="subtitle">{translations.subtitle[lang]}</p>

    <div class="pharmacy-list">
      {pharmacies.map((pharmacy: Pharmacy) => (
        <div class="pharmacy-card">
          <div class="card-header">
            <h2>{pharmacy.name[lang]}</h2>
            <span class="hours-badge">{pharmacy.hours}</span>
          </div>

          <div class="card-content">
            <div class="info-row">
              <span class="icon">📍</span>
              <span>{pharmacy.location[lang]}</span>
            </div>

            <div class="info-row">
              <span class="icon">🏢</span>
              <span>{pharmacy.address[lang]}</span>
            </div>

            <div class="info-row phone">
              <span class="icon">📞</span>
              <span>{pharmacy.phone}</span>
            </div>
          </div>

          <div class="card-footer">
            <p class="directions-text">{translations.directions[lang]}</p>
            <div class="nav-buttons">
              <a href={pharmacy.maps.links.google_maps} target="_blank" rel="noopener noreferrer" class="nav-button">
                Google Maps
              </a>
              <a href={pharmacy.maps.links.waze} target="_blank" rel="noopener noreferrer" class="nav-button">
                Waze
              </a>
              <a href={pharmacy.maps.links.apple_maps} target="_blank" rel="noopener noreferrer" class="nav-button">
                Apple Maps
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>

